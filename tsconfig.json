{
    "compilerOptions": {
      "target": "ES2020",          /* Specify the ECMAScript target version */
      "module": "CommonJS",        /* Specify module code generation */
      "outDir": "./dist",          /* Output directory for compiled files */
      "rootDir": "./src",          /* Root directory of source files */
      "strict": true,              /* Enable strict type checking */
      "esModuleInterop": true,     /* Enables interoperability between CommonJS and ES6 modules */
      "skipLibCheck": true,        /* Skip type checking of declaration files */
      "forceConsistentCasingInFileNames": true /* Enforces consistent casing in file names */
    },
    "include": ["src/**/*.ts"],    /* Specify the files to include in compilation */
    "exclude": ["node_modules"]     /* Specify the files to exclude from compilation */
  }
  